<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/blue"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.databaseassng.StoreActivity">


    <EditText
        android:id="@+id/edit_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edit_con1"
        android:layout_alignLeft="@+id/edit_con1"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"

        android:ems="12"
        android:layout_marginTop="25dp"
        android:inputType="text" />

    <TextView
        android:id="@+id/content1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"

        android:layout_alignParentTop="true"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceMedium" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"

        android:layout_alignBaseline="@+id/edit_con1"
        android:layout_alignBottom="@+id/edit_con1"
        android:layout_alignLeft="@+id/content1"
        android:text="Email"
        android:textAppearance="?android:attr/textAppearanceMedium"

        android:id="@+id/content2"

        />

    <EditText
        android:id="@+id/edit_con1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"

        android:layout_alignParentRight="true"
        android:layout_below="@+id/content1"
        android:layout_marginTop="25dp"
        android:ems="12"
         />







    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/content2"
        android:layout_marginLeft="40dp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:layout_centerVertical="true"
        android:onClick="Save"
        android:text="Save" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@color/black"
        android:textColor="@color/white"
        android:layout_marginLeft="150dp"
        android:onClick="Display"
        android:text="Display" />



    <TextView
        android:id="@+id/textViewer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"

        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name: \nEmail: "
        android:layout_alignBottom="@+id/button1"
        android:layout_below="@+id/edit_con1"
        android:layout_alignEnd="@+id/button2"
        android:layout_alignParentStart="true" />


</RelativeLayout>